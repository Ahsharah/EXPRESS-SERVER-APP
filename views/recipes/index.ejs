<!DOCTYPE html>
<html>
<head>
    <title>Recipes</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="container">
        <h1>Recipes</h1>
        
        <a href="/recipes/new" class="button">Create New Recipe</a>
        
        <!-- Filter form -->
        <form action="/recipes" method="GET" class="filter-form">
            <select name="difficulty">
                <option value="">All Difficulties</option>
                <option value="easy">Easy</option>
                <option value="medium">Medium</option>
                <option value="hard">Hard</option>
            </select>
            <button type="submit">Filter</button>
        </form>

        <div class="recipe-grid">
            <% recipes.forEach(recipe => { %>
                <div class="recipe-card">
                    <h2><%= recipe.title %></h2>
                    <p>Difficulty: <%= recipe.difficulty %></p>
                    <p>Time: <%= recipe.timeInMinutes %> minutes</p>
                    <div class="card-actions">
                        <a href="/recipes/<%= recipe.id %>">View</a>
                        <a href="/recipes/<%= recipe.id %>/edit">Edit</a>
                        <form action="/recipes/<%= recipe.id %>" method="POST" style="display: inline;">
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit">Delete</button>
                        </form>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</body>
</html>