<!DOCTYPE html>
<html>
<head>
    <title>My Recipe Collection</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="container">
        <h1>My Recipe Collection</h1>
        
        <div class="recipe-actions mb-20">
            <a href="/recipes/new" class="button add">Add New Recipe</a>
        </div>

        <% if (recipes && recipes.length > 0) { %>
            <div class="recipe-grid">
                <% recipes.forEach(recipe => { %>
                    <div class="recipe-card">
                        <h2><%= recipe.title %></h2>
                        <div class="recipe-details">
                            <p><strong>Difficulty:</strong> <%= recipe.difficulty %></p>
                            <% if (recipe.ingredients) { %>
                                <p><strong>Ingredients:</strong></p>
                                <ul>
                                    <% recipe.ingredients.forEach(ingredient => { %>
                                        <li><%= ingredient %></li>
                                    <% }) %>
                                </ul>
                            <% } %>
                        </div>
                        <div class="recipe-actions">
                            <a href="/recipes/<%= recipe.id %>" class="button">View</a>
                            <form action="/recipes/<%= recipe.id %>" method="POST" style="display: inline;">
                                <input type="hidden" name="_method" value="DELETE">
                                <button type="submit" class="button delete">Delete</button>
                            </form>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <div class="text-center mt-20">
                <p>No recipes yet! Why not add one?</p>
            </div>
        <% } %>
    </div>

    <footer class="main-footer">
        <p>Thanks for visiting my recipe collection!</p>
    </footer>
</body>
</html>